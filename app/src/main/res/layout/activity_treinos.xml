<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreinosActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/treinos_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/treinos_tab_cadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Script"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/treinos_tab_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Histórico"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/treinos_tab_estatistica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estatística"/>
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/treinos_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>