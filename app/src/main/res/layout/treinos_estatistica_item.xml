<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/treinos_estatistica_item_nome"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            android:text="Nome exercício">
        </TextView>
        <TextView
            android:id="@+id/treinos_estatistica_item_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/treinos_estatistica_item_nome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/treinos_estatistica_item_reps"
            android:layout_marginTop="18dp"
            android:layout_marginRight="12dp"
            android:text="0"/>
        <TextView
            android:id="@+id/treinos_estatistica_item_series_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/treinos_estatistica_item_series"
            app:layout_constraintLeft_toLeftOf="@+id/treinos_estatistica_item_series"
            app:layout_constraintRight_toRightOf="@+id/treinos_estatistica_item_series"
            android:text="Series(Total)"/>
        <TextView
            android:id="@+id/treinos_estatistica_item_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/treinos_estatistica_item_nome"
            app:layout_constraintRight_toRightOf="@+id/treinos_estatistica_item_nome"
            app:layout_constraintTop_toBottomOf="@+id/treinos_estatistica_item_nome"
            android:layout_marginTop="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:text="0"/>
        <TextView
            android:id="@+id/treinos_estatistica_item_reps_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/treinos_estatistica_item_reps"
            app:layout_constraintLeft_toLeftOf="@+id/treinos_estatistica_item_reps"
            app:layout_constraintRight_toRightOf="@+id/treinos_estatistica_item_reps"
            android:layout_marginBottom="6dp"
            android:text="Repetições(Média)"/>
        <TextView
            android:id="@+id/treinos_estatistica_item_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/treinos_estatistica_item_nome"
            app:layout_constraintLeft_toRightOf="@+id/treinos_estatistica_item_reps"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginRight="12dp"
            android:text="0"/>
        <TextView
            android:id="@+id/treinos_estatistica_item_peso_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/treinos_estatistica_item_peso"
            app:layout_constraintLeft_toLeftOf="@+id/treinos_estatistica_item_peso"
            app:layout_constraintRight_toRightOf="@+id/treinos_estatistica_item_peso"
            android:layout_marginBottom="6dp"
            android:text="Peso(Média)"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>